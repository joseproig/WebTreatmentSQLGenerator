{% extends "base.html.twig" %}


{% block body %}
    <div class="container mx-auto">
        <div class="w-full px-6">
          
            <div class=" mt-8 mx-12 text-4xl font-extrabold text-white flex align-center">
                {{project.name}}
                <a href="{{project.id}}/delete" class="align-middle bg-red-500 mx-4 px-2 py-2 text-sm font-medium rounded-xl border border-white-600 text-white-600 hover:bg-white hover:text-red-500">
                    Borrar Proyecto
                </a>
            </div>

            <div class=" mt-2 mb-2 mx-12 text-xl text-white">
                {{project.description}}
            </div>

            <div class=" mt-8 mx-12 text-2xl font-extrabold text-white flex align-center">
                Templates
                <a href="{{project.id}}/templates/create" class="bg-lime-500 mx-4 px-2 py-1 text-sm font-medium rounded-xl border border-white-600 text-white-600 hover:bg-white hover:text-red-500">
                    Crear Nueva Template
                </a>
            </div>

            <div class="mx-8 mt-10 flex flex-row gap-y-10 basis-1/5 grow justify-between justify-items-center  grid md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4">
                {% for question in project.templateQuestions %}
                    <!-- Card -->
                    <card class="bg-slate-300  w-80 rounded-2xl border shadow py-12 px-8 hover:-translate-y-1 hover:shadow-2xl delay-75 duration-100  group gap-2">
                        <p class="text-3xl text-gray-700 font-semibold"> Template {{loop.index}} </p>
                        <a class="absolute  top-3 right-3  hidden group-hover:block" href="{{ project.id }}/templates/{{ question.id }}/delete">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-red-500" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                        </a>
                        <p class="text-xl text-gray-700 font-semibold mt-1"> {{question.creator.name}} </p>
                    
                        <!-- Description -->
                        <p class="text-sm text-gray-700 font-light mt-5 mb-5 leading-7"> {{question.templateQuestion}} </p>
                        
                        <div class="flex flex-col justify-center w-auto mt-10 text-center">
                            <!-- Button -->
                            <a href="{{project.id}}/templates/{{question.id}}/edit" class="my-3 w-auto bg-transparent w-full py-3 px-3 rounded-xl border border-red-600 text-red-600 hover:bg-red-600 hover:text-gray-50">
                                Editar Template
                            </a>

                            <!-- Button 2 -->
                            <a href="{{project.id}}/templates/{{question.id}}/edit/answers" class="bg-transparent w-full py-3 px-3 rounded-xl border border-green-600 text-green-600 hover:bg-green-600 hover:text-gray-50">
                                Editar XML
                            </a>
                        </div>
                        
                    </card>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}