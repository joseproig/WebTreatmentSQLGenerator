{% extends "base.html.twig" %}


{% block body %}
    <div class="container mx-auto">
        <div class="flex flex-col justify-center text-transparent bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500 bg-clip-text">
            <h1 class="text-center mt-1 text-2xl font-extrabold uppercase tracking-tighest sm:text-5xl lg:text-7xl">GENERADOR DE QUERIES</h1>
        </div> 
        <div class="w-full px-6">
            <div class=" mt-8 mx-12 text-4xl font-extrabold text-white">
                {{project.name}}
            </div>

            <div class=" mt-2 mb-2 mx-12 text-xl text-white">
                {{project.description}}
            </div>

            <div class=" mt-8 mx-12 text-4xl font-extrabold text-white flex align-center">
                Templates
                <a href="{{project.id}}/templates/create" class="bg-red-500 mx-4 px-2 py-1 text-base font-medium rounded-xl border border-white-600 text-white-600 hover:bg-white hover:text-red-500">
                    Crear Nueva Template
                </a>
            </div>

            <div class="mx-8 mt-10 flex flex-row gap-y-10 basis-1/5 grow justify-between justify-items-center  grid md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4">
                {% for question in project.templateQuestions %}
                    <!-- Card -->
                    <card class="bg-slate-300  w-80 rounded-2xl border shadow py-12 px-8 hover:-translate-y-1 hover:shadow-2xl delay-75 duration-100  group gap-2">
                        <!-- Header & Price -->
                        <p class="text-3xl text-gray-700 font-semibold"> Template {{loop.index}} </p>
                        <p class="text-xl text-gray-700 font-semibold mt-1"> {{question.creator.name}} </p>
                    

                        <!-- Description -->
                        <p class="text-sm text-gray-700 font-light mt-5 leading-7"> {{question.templateQuestion}} </p>

                        <!-- CTA Button -->
                        <button class=" bg-transparent mt-10 w-full py-3 rounded-xl border border-red-600 text-red-600 hover:bg-red-600 hover:text-gray-50">
                        Editar Template
                        </button>
                    </card>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}