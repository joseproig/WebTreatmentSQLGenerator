{% extends "base.html.twig" %}



{% block body %}
    
   <div class="container mx-auto">
        <div class="flex flex-col justify-center text-transparent bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500 bg-clip-text">
            <h1 class="text-center mt-1 text-2xl font-extrabold uppercase tracking-tighest sm:text-5xl lg:text-7xl">GENERADOR DE QUERIES</h1>
        </div> 
        <div class="w-full px-6 flex flex-col justify-center">
            <div class=" mt-8 mx-12 text-4xl font-extrabold text-white text-center">
                Crear nuevos templates
            </div>

            {{form_start(form)}}
                <div class="w-full h-full flex justify-center grid justify-items-center">

                    <ul class="w-full"  id="templateQuestions"
                    data-prototype="{{ form_row(form.templateQuestions.vars.prototype,{
                                        'attr':{
                                            'class':'mt-3 bg-gray-200 shadow appearance-none border border-red rounded py-2 px-3 text-grey-darker mb-3',
                                            'placeholder':'Describe aqui tu proyecto...',
                                            'rows':'10',
                                            'cols':'50'
                                        },
                                        'label_attr':{'class':'font-sans text-slate-100'},
                                        'row_attr':{'class' : 'w-full grid justify-items-center  px-3 pt-5'},
                                        'label':'Plantilla de una nueva template:'
                                    })|e }}"
                    data-widget-tags="{{ '<li class="py-2"></li>'|e }}"
                    data-widget-counter="{{ form.templateQuestions|length }}">

                        
                        
                        {% for templateQuestion in form.templateQuestions %}
                            <li class="w-full py-2 grid justify-items-center"> 
                                {{  
                                    form_row(templateQuestion,{
                                        'attr':{
                                            'class':'mt-3 bg-gray-200 shadow appearance-none border border-red rounded py-2 px-3 text-grey-darker mb-3',
                                            'placeholder':'Escribe aqui tu plantilla de query...',
                                            'rows':'10',
                                            'cols':'50'
                                        },
                                        'label_attr':{'class':'font-sans text-slate-100'},
                                        'row_attr':{'class' : 'w-full grid justify-items-center  px-3 pt-5'},
                                        'label':'Plantilla de una nueva template:'
                                    })
                                }}
                            </li>
                        {% endfor %}

                    </ul>

                    <button class="add-another-collection-widget py-5" data-list-selector="#templateQuestions">
                        <svg class="h-8 w-8 text-red-500"  width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">  <path stroke="none" d="M0 0h24v24H0z"/>  <circle cx="12" cy="12" r="9" />  <line x1="9" y1="12" x2="15" y2="12" />  <line x1="12" y1="9" x2="12" y2="15" /></svg>
                    </button>

                    <button type="submit" class="bg-transparent text-red-500 hover:bg-red-500 text-red-700 font-semibold hover:text-white py-2 px-4 border border-red-500 hover:border-transparent rounded">
                        Genera
                    </button>

                    
                </div>
            
            {{form_end(form)}}
        </div>
    </div>
{% endblock %}