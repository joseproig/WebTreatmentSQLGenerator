{% extends "base.html.twig" %}



{% block body %}
    
   <div class="container mx-auto">
        <div class="w-full px-6 flex flex-col justify-center">
            <div class=" mt-8 mx-12 text-4xl font-extrabold text-white text-center">
                Editar template
            </div>

            {{form_start(form)}}
                <div class="w-full h-full flex justify-center grid justify-items-center">

                    
                    {{  
                        form_row(form.templateQuestion,{
                            'attr':{
                                'class':'mt-3 bg-gray-200 shadow appearance-none border border-red rounded py-2 px-3 text-grey-darker mb-10',
                                'placeholder':'Escribe aqui tu plantilla de query...',
                                'rows':'10',
                                'cols':'50'
                            },
                            'label_attr':{'class':'font-sans text-slate-100'},
                            'row_attr':{'class' : 'w-full grid justify-items-center  px-3 pt-5'},
                            'label':'Plantilla de la template a editar:'
                        })
                    }}
                      

                    <button type="submit" class="bg-transparent text-red-500 hover:bg-red-500 text-red-700 font-semibold hover:text-white py-2 px-4 border border-red-500 hover:border-transparent rounded">
                        Editar
                    </button>

                    
                </div>
            
            {{form_end(form)}}
        </div>
    </div>
{% endblock %}