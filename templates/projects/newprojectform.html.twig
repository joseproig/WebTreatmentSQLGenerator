{% extends "base.html.twig" %}
{% form_theme form _self %}

{% block _project_form_path_to_db_widget  %}
    <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md">
        <div class="space-y-1 text-center">
            <svg class="mx-auto h-12 w-12 text-white" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <div class="flex text-sm text-gray-600">
                <label for="project_form_pathToDbFile" class="relative cursor-pointer bg-white rounded-md font-medium text-indigo-600 hover:text-indigo-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500">
                    <span class="px-2 py-2">Upload a file</span>
                    <input id="project_form_pathToDbFile" name="project_form[pathToDbFile]" type="file" class="sr-only">
                </label>
                <p class="pl-1 text-white">or drag and drop</p>
            </div>
            <p class="text-xs text-white">
                .DB up to 10MB
            </p>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container mx-auto">
        <div class="flex flex-col justify-center text-transparent bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500 bg-clip-text">
            <h1 class="text-center mt-1 text-4xl font-extrabold uppercase tracking-tighest sm:text-5xl lg:text-7xl">GENERADOR DE QUERIES</h1>
        </div>
        <div>
            <div class="mt-8 text-4xl font-extrabold text-white text-center">
                Crear nuevo proyecto
            </div>
            <div class="mt-5 mb-5 py-5">
                {{form_start(form)}}
                <div class="flex justify-items-center grid w-full h-full">

                    {{form_row(form.name,{
                                'attr':{
                                    'class':'mt-3 bg-gray-200 shadow appearance-none border border-red rounded w-full py-2 px-3 text-grey-darker mb-3',
                                    'size':'30',
                                    'placeholder':'Titula tu proyecto...'
                                },
                                'label_attr':{'class':'font-sans text-white'},
                                'row_attr':{'class':'grid justify-items-center pt-5'} 
                            })}}

                    
                    {{form_row(form.description, {
                        'attr':{
                            'class':'mt-3 bg-gray-200 shadow appearance-none border border-red rounded py-2 px-3 text-grey-darker mb-3',
                            'placeholder':'Describe aqui tu proyecto...',
                            'rows':'10',
                            'cols':'50'
                        },
                        'label_attr':{'class':'font-sans text-slate-100'},
                        'row_attr':{'class' : 'w-full grid justify-items-center  px-3 pt-5'},
                    })}}
                
                    {{ form_row(form.pathToDbFile,{
                        'label_attr':{'class':'block text-sm font-medium text-white'},
                        'row_attr':{'class':'grid justify-items-center pt-5'} 
                    })}}


                    <button type="submit" class="bg-transparent w-1/6 text-red-500 hover:bg-red-500 text-red-700 font-semibold hover:text-white py-2 px-4 border border-red-500 hover:border-transparent rounded mt-8">
                        Crear proyecto
                    </button>
                </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>
{% endblock %}
