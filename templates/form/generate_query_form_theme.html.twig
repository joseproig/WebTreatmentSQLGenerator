{% use 'form_div_layout.html.twig' %}





{% block question_form_templateQuestion_row %}
    {% for child in form.children|filter(child => not child.rendered) %}
        <div class="w-full grid justify-items-center bg-slate-100 px-3 rounded-lg py-3">
            {{ form_label(child) }}
            {{ form_widget(child) }}
            {{ form_help(child) }}
            {{ form_errors(child) }}
        </div>
    {% endfor %}
{% endblock %}


{% block _question_form_template_question_label_ %}
    <div class="font-sans text-slate-900">
        {{ parent() }}
    </div>
{% endblock %}

{% block _question_form_path_to_db_file_widget_ %}
    <div class="block
                px-3
                py-1
                text-base
                font-normal
                bg-transparent bg-clip-padding
                border border-solid border-gray-300
                rounded
                m-0
                text-white
                focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none">
        {{ parent() }}
    </div>
{% endblock %}

{% block _question_form_path_to_db_file_label_ %}
    <div class="font-sans text-white">
        {{ parent() }}
    </div>
{% endblock %}

{% block _question_form_path_to_db_file_row_ %}
    <div class="py-10 grid justify-items-center">
        {{ parent() }}
    </div>
{% endblock %}